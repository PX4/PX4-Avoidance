<launch>

     <node name="local_planner_node" pkg="avoidance" type="local_planner_node" output="screen">
        <param name="goal_x_param" value="46" />
        <param name="goal_y_param" value="42"/>
        <param name="goal_z_param" value="8" />
    </node>
    
    <include file="$(find realsense_camera)/launch/r200_nodelet_modify_params.launch" >
    </include>
        

    <!-- <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find avoidance)/resource/local_planning.rviz" /> -->
    
    <arg name="mavros_transformation" default="0" />
    <arg name="point_cloud_topic" default="/camera/depth/points"/>

    <param name="use_sim_time" value="false" />

    <!-- <node pkg="rqt_reconfigure" type="rqt_reconfigure" output="screen" name="rqt_reconfigure" /> -->
    
    <node pkg="tf" type="static_transform_publisher" name="tf_90_deg" 
          args="0 0 0 $(arg mavros_transformation) 0 0 world local_origin 10"/>
    <node pkg="tf" type="static_transform_publisher" name="tf_depth_camera" 
          args="0 0 0 -1.57 0 -1.57 fcu camera_link 10"/>

    <!-- Mavros and Sitl -->
    <arg name="headless" default="false"/>
    <arg name="gui" default="true"/>
    <arg name="ns" default="/"/>
    <!-- <arg name="build" default="posix_sitl_default"/> -->
    <!-- <arg name="fcu_url" default="udp://:14540@localhost:14557"/> -->
    <!-- <arg name="fcu_url" default="udp://:14547@localhost:14550"/> -->
    <arg name="fcu_url" value="tcp://172.17.0.1:5760"/>
    <arg name="system_id" value="2"/>
    <arg name="gcs_url" default="" />   <!-- GCS link is provided by SITL -->
    <arg name="tgt_system" default="1" />
    <arg name="tgt_component" default="1" />
    <!-- <arg name="mavros_transformation" default="-1.57" /> -->
    <arg name="est" default="ekf2"/>
    <arg name="vehicle" default="iris"/>


    <!-- Launch MavROS -->
    <group ns="$(arg ns)">
        <include file="$(find mavros)/launch/node.launch">
            <arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
            <!-- Need to change the config file to get the tf topic and get local position in terms of local origin -->
            <arg name="config_yaml" value="$(find avoidance)/resource/px4_config.yaml" />
            <arg name="fcu_url" value="$(arg fcu_url)" />
            <arg name="gcs_url" value="$(arg gcs_url)" />
            <arg name="tgt_system" value="$(arg tgt_system)" />
            <arg name="tgt_component" value="$(arg tgt_component)" />
        </include>
    </group>
  

</launch>
